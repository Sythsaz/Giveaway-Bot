{
  // Exclude .git/hooks from PowerShell analysis (they're bash scripts for Git Bash)
  "powershell.codeFormatting.ignoreOneSpaceBeforeOpenBrace": true,
  "files.associations": {
    ".git/hooks/*": "shellscript"
  },
  // Exclude .git directory from PowerShell script analyzer
  "powershell.scriptAnalysis.settingsPath": ".vscode/PSScriptAnalyzerSettings.psd1",

  // Markdown formatting - enforce 120 character line length
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120]
  }
}
